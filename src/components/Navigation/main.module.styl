@import '../../styles/_variables'

.container
    nav 
        small_font-alt()
        cursor: pointer
        width: 75vw
        max-width: calc(100vw - 400px)
        position: fixed
        bottom: 0
        left: 0 
        padding-right: 0.5rem
        z-index 70
        padding-top 1rem
        height var(--height-footer)
        background: white
        @media _small
            max-width: none
        > div
        > a
            height 100%
            width: 100vw
            position absolute
            border-left: var(--border)
            padding-left var(--padding-element)
            display: flex
            text-decoration: none
            margin-left 0.5rem
            padding-left:  0.5rem
            transition: left 0.5s
            background: white
            &:hover
                color: var(--benj-gray-dark)
                border-color: var(--benj-gray-dark)
            &.home
                left: 0
                &.hidden
                    left: -33.33333334%
                    @media _small
                        left: -23vw
            &.index
                left 66.66666667%
                @media _small
                    left: 46vw
            &.about
                &.left
                    left 0%
                &.right
                    left 25%
                    @media _small
                        left: 23vw
            
