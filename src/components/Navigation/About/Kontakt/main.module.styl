@import '../../../../styles/_variables'


        .left
            flex-shrink: 1
            width: calc(100% - 100px)
            max-width 950px
            .intro_text
                padding-bottom: 9rem
                display: flex
                flex-direction: column
                gap 1.9rem
            .mapWrapper
                width 100%
                height: 500px

        .right
            max-height: calc(100%)
            width: 320px
            display: flex
            flex-shrink: 0
            flex-direction: column
            justify-content: space-between
            gap: 30px
            padding-bottom 9rem
            overflow: scroll
            position relative
            .group > div
                padding-bottom 1rem
            .title
                position sticky
                top 0
            .impressumButton
                position absolute
                bottom 0
                small_font-alt()
                cursor pointer
            .impressum
                small_font-alt()
                position absolute
                transition: transform 0.5s
                padding:  var(--padding)
                background-color: var(--benj-yellow)
                height: 100%
                overflow scroll
                width: 100%
                transform: translateY(100%)
                &.active
                    transform: translateY(0)
                .closeButton
                    cursor pointer
                    position absolute
                    top: var(--padding)
                    right: var(--padding)


