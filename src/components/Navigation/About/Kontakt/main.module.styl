@import '../../../../styles/_variables'


        .left
            flex-shrink: 1
            width: calc(100% - 100px)
            max-width 950px
            @media _small
                width: 100vw
                height: 70vh
                max-width: none
                min-width none
                order: 1
            .intro_text
                padding-bottom: 9rem
                display: flex
                flex-direction: column
                gap 1.9rem
            .mapWrapper
                width 100%
                height: 500px
                @media _small
                    width: calc(100vw - 2rem)
                    pointer-events: none

        .right
            max-height: calc(100%)
            width: 320px
            display: flex
            flex-shrink: 0
            flex-direction: column
            justify-content: space-between
            gap: 30px
            padding-bottom 9rem
            overflow: hidden
            position relative
            @media _small
                order: 0
                width: 100%
            .group > div
                padding-bottom 1rem
            .title
                position sticky
                top 0
            .impressumButton
                position absolute
                bottom 0
                small_font-alt()
                cursor pointer
                @media _small
                    position: fixed
                    padding-bottom 0.5rem
                    padding-top 0.5rem
                    z-index: 1000
                    background: white
                    width: 100%
            .impressum
                small_font-alt()
                position absolute
                transition: transform 0.5s
                padding:  var(--padding)
                background-color: var(--benj-yellow)
                height: 100%
                overflow scroll
                width: 100%
                transform: translateY(100%)
                @media _small
                    position: fixed
                    left: 0
                    top: 0
                    width: 100vw
                &.active
                    transform: translateY(0)
                .closeButton
                    cursor pointer
                    position absolute
                    top: var(--padding)
                    right: var(--padding)