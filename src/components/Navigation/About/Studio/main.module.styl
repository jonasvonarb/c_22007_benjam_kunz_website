@import '../../../../styles/_variables'


        .left
            flex-shrink: 1
            height: 100%
            width: calc(100% - 100px)
            max-width 950px
            display: flex
            flex-direction: column
            @media _small
                width: 100%
                height: auto
                max-width: none
                min-width none
            .scroller
                overflow: scroll
                
            .intro_text
                display: flex
                flex-direction: column
                flex-shrink: 1
                gap 1.9rem
                overflow: scroll
                padding: 4px 0 6rem 0;
            .imageWrapper
                width 100%
                max-height: 400px
                flex-shrink: 1
                img
                    width: 100% 
                    height: 100%
                    object-fit contain
                    object-position: left
        .right
            max-height: calc(100%)
            width: 320px
            display: flex
            flex-shrink: 0
            flex-direction: column
            justify-content: space-between
            gap: 30px
            @media _small
                width: 100%
                max-width: none
                min-width none
            .secondaryContainer
                display: flex
                flex-direction: column
                gap: 30px
                flex-shrink: 0
            .infoContainer
                flex-shrink: 1
                display: flex
                flex-direction: column
                height: 100%
                // overflow visible
                .info_title
                    border-top solid black 0.5px
                .info_title:first
                    border none