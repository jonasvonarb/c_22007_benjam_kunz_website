@import '../../../../styles/_variables'


        .left
            flex-shrink: 1
            height: 100%
            width: calc(100% - 100px)
            display: flex
            flex-direction: column
            .intro_text
                display: flex
                flex-direction: column
                flex-shrink: 1
                gap 1.9rem
                overflow: scroll
                height: 100%
                padding: 4px 0 6rem 0;
            .imageWrapper
                width 100%
                max-height: 400px
                flex-shrink: 1
                img
                    width: 100% 
                    height: 100%
                    object-fit contain
                    object-position: left
        .right
            max-height: calc(100%)
            width: 320px
            display: flex
            flex-shrink: 0
            flex-direction: column
            justify-content: space-between
            gap: 30px
            .secondaryContainer
                display: flex
                flex-direction: column
                gap: 30px
                flex-shrink: 0
            .infoContainer
                flex-shrink: 1
                display: flex
                flex-direction: column
                height: 100%
                overflow visible
                div
                    transition: all 0.5s
                    overflow: visible
                .info_title
                    cursor pointer
                    border-top solid black 0.5px
                .info_title:first
                    border none
                .accordion
                    transition: all 0.5s
                    flex: 1
                    overflow: scroll
                    max-height: 0%
                    .info
                        margin-left: 3rem
                        padding: 0.3rem 0
                        border-top: solid black 0.5px 
                        tiny_font_alt()

                .open
                    max-height: 70%
