@import '../../../../styles/_variables'

.container
    position: absolute
    display: flex
    justify-content: flex-end;
    flex-direction: column;
    right: 0
    bottom: 0
    width: 25vw
    min-width 400px
    height: 100vh
    pointer-events: none
    z-index 70
    .button
        pointer-events: all
        all: unset
        background-color: white
        position: absolute
        left: 0
        bottom: 0
        width: 100%
        small_font-alt()
        height var(--height-footer)
        div
            padding-left var(--padding-element)
            border-left: var(--border)
            display: flex
            margin-top 1rem
            height: calc(100%)
            &:hover
                color: var(--benj-gray-dark)
                border-color: var(--benj-gray-dark)
            .index
                pointer-events: all
                width: 20%
            .title
                pointer-events: all
                width: 80%
    .info
        border-left: solid 0.5px gray
        pointer-events: all
        height: 100%
        display: flex
        justify-content: flex-end;
        flex-direction: column
        z-index 100
        background: var(--benj-yellow)
        padding: var(--padding-element)
        padding-bottom: 0
        transform: translateY(100%)
        transition: transform 0.5s
        hyphens: auto
        > *
            opacity all 0.5s
        &.hidden > *
            opacity 0.1
            pointer-events: none
        &.active
            transform: translateY(0)
        .titleLine
            display: flex
            justify-content: space-between;
            border-bottom: var(--border)
            small_font-alt()
            .index
                width: 20%
            .title
                width: 80%
        .subtitle
            title_font()
            width: 95%
        .galerieTitle
            small_font-alt()
            border-bottom: var(--border)
        .imageContainer
            position absolute
            width: calc(100% - 2rem)
            bottom: 1rem
            background-color: black
            z-index: 100
            pointer-events: auto !important
            opacity 1 !important
            .icon
                position absolute
                top -1.6rem
                right 0.1rem
                z-index 101
            .previewImage
                width: 100%
                z-index 100
        .shopGalerie
            padding-top: var(--padding-element)
            position relative
            display: flex
            overscroll-behavior: none
            gap: 10px
            overflow-y: scroll
            padding-bottom: 20px
            div
                flex-shrink: 0
                height: 200px
                position relative
                span
                    position absolute
                    top: 0
                    left: 0
                    background-color: var(--benj-yellow)
                    padding-right 3px
                    small_font-alt()
                img
                    height: 100%
        .list
            overflow scroll
            padding-bottom: 2.7rem
            border-top: var(--border)
            .listElement
                display flex
                border-top: var(--border)
                padding .3rem 0 .4rem 0
                &:first-child 
                    border-top: none
                .label
                    width: 20%
                    label_font()
                .text
                    width: 80%
        .gradient
            background: var(--benj-yellow);
            background: -moz-linear-gradient(0deg, var(--benj-yellow) 0%, rgba(0,255,255,0) 100%)
            background: -webkit-linear-gradient(0deg, var(--benj-yellow) 0%, rgba(0,255,255,0) 100%)
            background: linear-gradient(0deg, var(--benj-yellow) 0%, rgba(0,255,255,0) 100%)
            width: 100%
            height: 2.7rem
            position: absolute
            bottom: 0