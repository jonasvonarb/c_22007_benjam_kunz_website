@import '../../../../styles/_variables'

.container
    position: absolute
    display: flex
    justify-content: flex-end;
    flex-direction: column;
    right: 0
    bottom: 0
    width: 25vw
    min-width 400px
    height: 100vh
    pointer-events: none
    z-index 70
    .button
        pointer-events: all
        all: unset
        background-color: white
        position: absolute
        left: 0
        bottom: 0
        width: 100%
        small_font-alt()
        height var(--height-footer)
        div
            padding-left var(--padding-element)
            border-left: var(--border)
            display: flex
            margin-top 1rem
            height: calc(100%)
            &:hover
                color: var(--benj-gray-dark)
                border-color: var(--benj-gray-dark)
            .index
                pointer-events: all
                width: 20%
            .title
                pointer-events: all
                width: 80%
    .info
        pointer-events: all
        height: 100%
        display: flex
        justify-content: flex-end;
        flex-direction: column
        z-index 100
        background: var(--benj-yellow)
        padding: var(--padding-element)
        padding-bottom: 0
        transform: translateY(100%)
        transition: transform 0.5s
        hyphens: auto
        &.active
            transform: translateY(0)
        .titleLine
            display: flex
            justify-content: space-between;
            border-bottom: var(--border)
            small_font-alt()
            .index
                width: 20%
            .title
                width: 80%
        .subtitle
            title_font()
            width: 95%
        .list
            overflow scroll
            padding-bottom: 2.7rem
            border-top: var(--border)
            .listElement
                display flex
                border-top: var(--border)
                padding .3rem 0 .4rem 0
                &:first-child 
                    border-top: none
                .label
                    width: 20%
                    label_font()
                .text
                    width: 80%
        .gradient
            background: var(--benj-yellow);
            background: -moz-linear-gradient(0deg, var(--benj-yellow) 0%, rgba(0,255,255,0) 100%)
            background: -webkit-linear-gradient(0deg, var(--benj-yellow) 0%, rgba(0,255,255,0) 100%)
            background: linear-gradient(0deg, var(--benj-yellow) 0%, rgba(0,255,255,0) 100%)
            width: 100%
            height: 2.7rem
            position: absolute
            bottom: 0