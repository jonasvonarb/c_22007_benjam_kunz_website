.container--full
.container--scroll
    position fixed
    top: 0
    left: 0
    width: 100vw
    height: var(--height-body)
    display: flex
    scroll-snap-type: x mandatory;
    overflow-x: scroll
    overflow-y: hidden
    overscroll-behavior: none
    .arrowLeft
    .arrowRight
        position fixed
        right 10px
        top: 2px
        transform: translateY(50%)
        height: 30px
        cursor pointer
    .arrowLeft
        left: 10px
        right unset

.imageContainer > span
.videoContainer > video
    padding: 0.2rem 0.1rem
    overflow: hidden
    height: 100%

.container--scroll
    .imageContainer
    .videoContainer
        height: 100%
        scroll-snap-align: center
        display: block
        .image
        .video
            width: auto
            height: 100%
            max-width: 100vw
            object-fit: contain
            object-position: top left

.container--full
    scroll-snap-type: x mandatory;
    .imageContainer
    .videoContainer
        scroll-snap-align: start;
        width: 100vw
        height: 100%
        flex-shrink: 0
        .image
        .video
            height: 100%
            width: 100%
            object-fit: contain
            object-position: top left

.container--full::-webkit-scrollbar
.container--scroll::-webkit-scrollbar 
  display: none;

.container--full    
.container--scroll 
  -ms-overflow-style: none;  /* IE and Edge */
  scrollbar-width: none;  /* Firefox */