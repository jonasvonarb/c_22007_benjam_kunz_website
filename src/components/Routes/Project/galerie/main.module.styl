@import '../../../../styles/_variables'


.container--full
.container--scroll
    position fixed
    top: 0
    left: 0
    width: 100vw
    height: var(--height-body)
    display: flex
    scroll-snap-type: x mandatory;
    overflow-x: scroll
    overflow-y: hidden
    overscroll-behavior: none
    cursor: none
    pointer-events: none
    .arrowLeft
    .arrowRight
        pointer-events: auto
        color: white
        position fixed
        right 0
        top 0
        height: 100vh
        width: 50vw
        z-index: 500
        &.blocked
            pointer-events: none
    .arrowLeft
        left: 0
        right unset



.imageContainer > span
.videoContainer > video
    padding: 0.2rem 0.1rem
    overflow: hidden
    height: 100%

.container--scroll
    .imageContainer
    .videoContainer
        height: 100%
        scroll-snap-align: center
        display: block
        .image
        .video
            width: auto
            height: 100%
            max-width: 100vw
            object-fit: contain
            object-position: top left

.container--full
    scroll-snap-type: x mandatory;
    .imageContainer
    .videoContainer
        scroll-snap-align: start;
        width: 100vw
        height: 100%
        flex-shrink: 0
        .image
        .video
            height: 100%
            width: 100%
            object-fit: contain
            object-position: top left

.container--full::-webkit-scrollbar
.container--scroll::-webkit-scrollbar 
  display: none;

.container--full    
.container--scroll 
  -ms-overflow-style: none;  /* IE and Edge */
  scrollbar-width: none;  /* Firefox */

.cursor
    position fixed
    display: flex
    justify-content: center
    gap 6px
    z-index 10000000
    transform: translate(-50%, -50%)
    color: rgb(200,200,200)
    medium_font-alt()
    mix-blend-mode: exclusion
    pointer-events: none !important
    // transition: opacity  1s
    &.scrolling
        opacity 0.2
        // gap 20px
        // color: var(--benj-yellow)
    .arrowInline
        filter: invert() brightness(0.5)
        height: 18px
        opacity 0
        &.activeArrow
            opacity 1


    